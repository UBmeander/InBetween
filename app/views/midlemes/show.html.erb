<p id="notice"><%= notice %></p>

<p>
  <strong>Location:</strong>
  <%= @midleme.location %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @midleme.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @midleme.longitude %>
</p>

<h3>Nearby Locations</h3>
<ul>
<% for location in @location.nearbys(5) %>
	<li><%= link_to location.address, location %> (<%= location.distance.round(1) %> miles)</li>
<% end %>
</ul>


<%= link_to 'Edit', edit_midleme_path(@midleme) %> |
<%= link_to 'Back', midlemes_path %>
